<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="favicon.ico" />
    <link rel="stylesheet" href="~/Contents/css/Sileder.css" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/charts.css/dist/charts.min.css">
</head>
<body>
    <div class="sidebar" id="sidebar">
        <ul>
            <li style="font-size:larger">
                <a href="@Url.Action("Index", "User")" class="nav-link">
                    <i class="bi bi-person-square"> </i>
                    <span class="nav-text">@Session["UserName"]</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Home")" class="nav-link">
                    <i class="bi bi-house-fill"></i>
                    <span class="nav-text"> Trang chủ</span>
                </a>
            </li>
            @if (Session["IdUser"] != null && Convert.ToInt32(Session["IdUser"]) == 1)
            {
                <li>
                    <a href="@Url.Action("Index", "Account")" class="nav-link">
                        <i class="bi bi-person-vcard"></i>
                        <span class="nav-text"> Tài khoản</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "DistributionHistory")" class="nav-link">
                        <i class="bi bi-clock-history"></i>
                        <span class="nav-text"> Lịch sử phân phối</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Delivery")" class="nav-link">
                        <i class="bi bi-geo-alt-fill"></i>
                        <span class="nav-text"> Giao hàng</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "DeliveryHistory")" class="nav-link">
                        <i class="bi bi-clock-history"></i>
                        <span class="nav-text"> Lịch sứ giao hàng</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Area")" class="nav-link">
                        <i class="bi bi-map-fill"></i>
                        <span class="nav-text"> Khu vực</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Violate", "Personnel")" class="nav-link">
                        <i class="bi bi-exclamation-diamond-fill"></i>
                        <span class="nav-text"> Lỗi nhân viên</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("RecallSupply", "Supply")" class="nav-link">
                        <i class="bi bi-person-fill-up"></i>
                        <span class="nav-text"> Vật tư đã cấp phát</span>
                    </a>
                </li>
            }@if (Session["IdUser"] != null && Convert.ToInt32(Session["IdUser"]) == 2)
            {
                <li>
                    <a href="@Url.Action("Index", "Personnel")" class="nav-link">
                        <i class="bi bi-people-fill"></i>
                        <span class="nav-text"> Nhân viên</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Violate", "Personnel")" class="nav-link">
                        <i class="bi bi-exclamation-diamond-fill"></i>
                        <span class="nav-text"> Lỗi nhân viên</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Supply")" class="nav-link">
                        <i class="bi bi-archive-fill"></i>
                        <span class="nav-text"> Vật tư</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("RecallSupply", "Supply")" class="nav-link">
                        <i class="bi bi-person-fill-up"></i>
                        <span class="nav-text"> Vật tư đã cấp phát</span>
                    </a>
                </li>
            }@if (Session["IdUser"] != null && Convert.ToInt32(Session["IdUser"]) == 3)
            {
                <li>
                    <a href="@Url.Action("Index", "Order")" class="nav-link">
                        <i class="bi bi-box-seam-fill"></i>
                        <span class="nav-text"> Đơn hàng</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "DistributionHistory")" class="nav-link">
                        <i class="bi bi-clock-history"></i>
                        <span class="nav-text"> Lịch sử phân phối</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Delivery")" class="nav-link">
                        <i class="bi bi-geo-alt-fill"></i>
                        <span class="nav-text"> Giao hàng</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "DeliveryHistory")" class="nav-link">
                        <i class="bi bi-clock-history"></i>
                        <span class="nav-text"> Lịch sứ giao hàng</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Area")" class="nav-link">
                        <i class="bi bi-map-fill"></i>
                        <span class="nav-text"> Khu vực</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Car")" class="nav-link">
                        <i class="bi bi-car-front-fill"></i>
                        <span class="nav-text"> Xe</span>
                    </a>
                </li>
            }

            <li>
                <a href="@Url.Action("Logout", "Login")" class="nav-link">
                    <i class="bi bi-arrow-left-square-fill"></i>
                    <span class="nav-text"> Đăng xuất</span>
                </a>
            </li>


        </ul>
    </div>

    <div class="content">
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p style="text-align:end"><strong>&copy; @DateTime.Now - Ứng dụng ASP.NET của Nguyễn Nhựt Duy</strong></p>
                <p style="text-align:end"><strong><i class="bi bi-broadcast-pin"></i> @Session["Online"] đang hoạt động</strong></p>
                <div class="row">
                    <div class="col-4">
                    </div>
                    <div class="col-4">
                    </div>
                    <div class="col-2">
                    </div>
                    <div class="col-1">
                        <h4>Backend</h4>
                        <a href="https://www.facebook.com/DuyNguyenOt">
                            <img src="https://scontent.fsgn5-8.fna.fbcdn.net/v/t39.30808-1/426406816_741310714730885_2805697846799434847_n.jpg?stp=dst-jpg_s200x200_tt6&_nc_cat=109&ccb=1-7&_nc_sid=1d2534&_nc_ohc=SNqhgvqFrJcQ7kNvgHMFjy8&_nc_zt=24&_nc_ht=scontent.fsgn5-8.fna&_nc_gid=AuyEKKv2_7FuMyMcZdmBwvG&oh=00_AYAGllfU00gqVDxI90ge6D7Tc85gELn6ITNBQuy8Xrm41w&oe=678AE62B" alt="Backend Image" style="width: 100px; height: 100px;">
                        </a>
                    </div>
                    <div class="col-1">
                        <h4>Frontend</h4>
                        <a href="https://www.facebook.com/dinhdoan.nguyen.77736310">
                            <img src="https://scontent.fsgn5-10.fna.fbcdn.net/v/t39.30808-1/472879281_1274556733817245_1566619855301214268_n.jpg?stp=cp6_dst-jpg_s200x200_tt6&_nc_cat=106&ccb=1-7&_nc_sid=e99d92&_nc_ohc=aAKwJDZxOfcQ7kNvgHm1IpE&_nc_zt=24&_nc_ht=scontent.fsgn5-10.fna&_nc_gid=AyY6zE1FOp4MahafGU8sLp6&oh=00_AYCJHkeRlIDz809WYRUsDxzJAF3oy28QkqevydyfosWnuw&oe=678AD34A" alt="Backend Image" style="width: 100px; height: 100px;">
                        </a>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Bootstrap Icon -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>
</html>
